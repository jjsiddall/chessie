<%= form_for @plan, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :lesson_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :lesson_id, Lesson.all, :id, :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :unit_type, ['Exercise','Practice','Test']%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :exercise_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :exercise_id, Exercise.all, :id, :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :practice_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :practice_id, Practice.all, :id, :title %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                plans_path, :class => 'btn' %>
  </div>
<% end %>
